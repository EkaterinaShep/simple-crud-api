{
  "name": "simple-crud-api",
  "version": "1.0.0",
  "description": "Simple CRUD API with in-memory database",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start:dev": "cross-env nodemon simple-crud-api",
    "test": "jest "
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.?(m)js?(x)",
      "**/?(*.)(spec|test).?(m)js?(x)"
    ],
    "transform": {
      "^.+\\.m?js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "mjs",
      "js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EkaterinaShep/simple-crud-api.git"
  },
  "author": "EkaterinaShep",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EkaterinaShep/simple-crud-api/issues"
  },
  "homepage": "https://github.com/EkaterinaShep/simple-crud-api#readme",
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "babel-jest": "^27.3.1",
    "cross-env": "^7.0.3",
    "jest": "^27.3.1",
    "nodemon": "^2.0.15",
    "regenerator-runtime": "^0.13.9",
    "supertest": "^6.1.6"
  }
}
